<div class="card">
    <div class="card-header">
        <h2>Create a new blog</h2>
    </div>
    <div class="card-body">
        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">Title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <label for="blog-content">Content:</label>
                <textarea class="form-input" type="text" id="blog-content" name="blog-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary display-block mx-auto">Create</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/newpost.js"></script>


<div class="blog-details">
    <section class="card card-rounded">
        <div class="card-header display-flex justify-space-between align-center">
            <h2>{{title}}</h2>
            <div>Posted by {{user.username}} on {{format_date date_created}}</div>
        </div>
        <div class="card-body">
            <div class="content">{{content}}</div>
        </div>
    </section>

    <section>
        {{#each comments}}
        {{> comment-details}}
        {{/each}}
    </section>
</div>

<div class="position-bottom">
    
    {{#if loggedIn}}
        <div class="card card-rounded">
            <div class="card-body">
                <form class="form new-comment-form">
                    <div class="form-group">
                        <label for="comment-content">comment:</label>
                        <textarea class="form-input" type="text" id="comment-content" name="comment-content" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <button id="make-comment" data-id="{{id}}" type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    {{else}}
        <a href="/login"><button class="btn btn-primary display-block mx-auto">Login to Comment</button></a>
    {{/if}}
</div>

<script src="/js/blog.js"></script>
